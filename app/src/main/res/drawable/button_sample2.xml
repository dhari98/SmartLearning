<!-- res/drawable/button_sample.xml -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/button_sample_click">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="@color/button_sample_click" />
                    <stroke android:width="1px" android:color="#BEE9D393" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/button_sample2" />
                    <stroke android:width="1px" android:color="@color/button_sample2" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>
