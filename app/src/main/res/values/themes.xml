<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LearnEnglish" parent="Theme.Material3.DayNight.NoActionBar">


                <!-- خلفية التطبيق -->
                <item name="android:windowBackground">@color/background_color</item>



                <!-- لون شريط الحالة -->
                <item name="android:statusBarColor">#DB2727</item>

                <!-- لون الأيقونات في شريط الحالة (اجعلها false إذا تريدها بيضاء مع الخلفية الداكنة) -->
                <item name="android:windowLightStatusBar">true</item>

                <!-- لون الأزرار -->
                <item name="colorButtonNormal">@color/button_sample</item>

                <!-- الحفاظ على المسافات من النظام -->
                <item name="android:fitsSystemWindows">true</item>

                <!-- لون النص على اللون الأساسي -->
                <item name="colorOnPrimary">@android:color/white</item>
            </style>

            <!-- الثيم الخاص بصفحة السبلاتش -->
            <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
                <item name="android:windowBackground">@drawable/appicon</item>
            </style>

            <!-- الثيم الرئيسي للتطبيق -->
            <style name="Theme.LearnEnglish" parent="Base.Theme.LearnEnglish" />
        </resources>
